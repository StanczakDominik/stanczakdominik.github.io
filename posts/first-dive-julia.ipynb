     "execution_count": 6,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "function upsum(M); n = size(M)[1]; sum = 0\n",
    "    for i = 1:n-1\n",
    "        for j = i+1:n\n",
    "            sum = sum + M[i,j]\n",
    "        end\n",
    "    end\n",
    "    return sum\n",
    "end\n",
